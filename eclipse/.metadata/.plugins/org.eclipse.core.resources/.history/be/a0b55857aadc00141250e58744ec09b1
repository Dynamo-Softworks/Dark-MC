package com.ncd1998.nmod.Util;

import com.ncd1998.nmod.Reference.MCEntityPaths;

import net.minecraft.entity.Entity;

public class EntityIdentifier {
	public static boolean isEntityEnderMob(Entity entClassName){
		boolean flag = false;
		if(entClassName.equals(MCEntityPaths.ENDERMAN)){
			flag = true;
		}
		if(ent.getClass().getName().equals(MCEntityPaths.ENDERMITE)){
			flag = true;
		}
		if(ent.getClass().getName().equals(MCEntityPaths.ENDERDRAGON)){
			flag = true;
		}
		
		return flag;
	}
	public static boolean isEntityNetherMob(Entity ent){
		boolean flag = false;
		if(ent.getClass().getName().equals(MCEntityPaths.BLAZE)){
			flag = true;
		}
		if(ent.getClass().getName().equals(MCEntityPaths.GHAST)){
			flag = true;
		}
		if(ent.getClass().getName().equals(MCEntityPaths.MAGMACUBE)){
			flag = true;
		}
		if(ent.getClass().getName().equals(MCEntityPaths.PIGMAN)){
			flag = true;
		}
		
		return flag;
	}
}
